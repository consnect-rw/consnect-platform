"use client";

import { useState, useEffect, useRef } from 'react';
import { useAuth } from '@/hooks/useAuth';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import {
  MessageSquare,
  Users,
  Search,
  Plus,
  Phone,
  Video,
  MoreVertical,
  ArrowLeft,
  Paperclip,
  Smile,
  Send,
  X,
  Loader2,
  AlertCircle,
  CheckCheck,
  Check,
  Clock,
} from 'lucide-react';
import { fetchMessages, createMessage } from '@/server/messaging/message';
import { fetchConversations } from '@/server/messaging/conversation';

interface ConversationData {
  id: string;
  type: string;
  participants: string[];
  createdAt: Date;
  messages?: MessageData[];
  _count?: {
    messages: number;
  };
}

interface MessageData {
  id: string;
  message: string;
  status: string;
  createdAt: Date;
  senderId: string;
  receiverId: string;
  sender: {
    id: string;
    name: string;
    image?: string;
  };
  receiver?: {
    id: string;
    name: string;
    image?: string;
  };
}

interface UserForChat {
  id: string;
  name: string;
  email: string;
  image?: string;
  company?: {
    id: string;
    name: string;
  };
}

export default function MessagesPage() {
  const { user } = useAuth();
  const queryClient = useQueryClient();
  const [activeTab, setActiveTab] = useState<'conversations' | 'users'>('conversations');
  const [selectedConversation, setSelectedConversation] = useState<ConversationData | null>(null);
  const [selectedUser, setSelectedUser] = useState<UserForChat | null>(null);
  const [showNewMessage, setShowNewMessage] = useState(false);
  const [searchQuery, setSearchQuery] = useState('');
  const [isMobileView, setIsMobileView] = useState(false);

  // Fetch user conversations
  const { data: conversationsData, isLoading: loadingConversations } = useQuery({
    queryKey: ['user-conversations', user?.id],
    queryFn: () =>
      fetchMessages(
        { id: true, message: true, createdAt: true, senderId: true, receiverId: true, sender: { select: { id: true, name: true, image: true } }, receiver: { select: { id: true, name: true, image: true } } },
        { OR: [{ senderId: user?.id }, { receiverId: user?.id }] },
        50,
        0,
        { createdAt: 'desc' }
      ),
    enabled: !!user?.id,
  });

  // Fetch all users for direct messaging
  const { data: allUsers, isLoading: loadingUsers } = useQuery({
    queryKey: ['all-users'],
    queryFn: async () => {
      // This would need to be a server action to fetch all users
      // For now, we'll use a placeholder
      return [];
    },
  });

  // Mutation to send message
  const sendMessageMutation = useMutation({
    mutationFn: (messageData: { message: string; receiverId: string }) =>
      createMessage({
        message: messageData.message,
        status: 'SENT',
        sender: { connect: { id: user?.id || '' } },
        receiver: { connect: { id: messageData.receiverId } },
      }),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['user-conversations'] });
    },
  });

  return (
    <div className="h-screen bg-gray-50 flex flex-col">
      {/* Header */}
      <Header activeTab={activeTab} setActiveTab={setActiveTab} onNewMessage={() => setShowNewMessage(true)} />

      {/* Main Chat Layout */}
      <div className="flex-1 flex overflow-hidden">
        {/* Sidebar */}
        <ChatSidebar
          activeTab={activeTab}
          selectedConversation={selectedConversation}
          setSelectedConversation={setSelectedConversation}
          selectedUser={selectedUser}
          setSelectedUser={setSelectedUser}
          conversations={conversationsData?.data || []}
          users={allUsers || []}
          isLoading={loadingConversations || loadingUsers}
          searchQuery={searchQuery}
          setSearchQuery={setSearchQuery}
          userId={user?.id}
          isMobileView={isMobileView}
        />

        {/* Chat Area */}
        {selectedUser ? (
          <DirectMessageArea
            user={user}
            selectedUser={selectedUser}
            onBack={() => setSelectedUser(null)}
            isMobileView={isMobileView}
            onSendMessage={(message) =>
              sendMessageMutation.mutate({ message, receiverId: selectedUser.id })
            }
          />
        ) : selectedConversation ? (
          <ConversationArea
            conversation={selectedConversation}
            currentUserId={user?.id}
            onBack={() => setSelectedConversation(null)}
            isMobileView={isMobileView}
            onSendMessage={(message) =>
              sendMessageMutation.mutate({ message, receiverId: selectedConversation.participants[0] })
            }
          />
        ) : (
          <EmptyStateArea />
        )}

        {/* New Message Modal */}
        {showNewMessage && <NewMessageModal onClose={() => setShowNewMessage(false)} users={allUsers || []} userId={user?.id} />}
      </div>
    </div>
  );
}

// Header Component
